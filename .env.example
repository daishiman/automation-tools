# ===========================================================
# アプリケーション基本設定
# ===========================================================
# 本番環境
# NEXT_PUBLIC_APP_URL=https://automationa-tools.pages.dev
# NEXT_PUBLIC_API_BASE_URL=/api
# ENVIRONMENT=production
# DEBUG=false

# 開発環境
# NEXT_PUBLIC_APP_URL=https://develop.automationa-tools.pages.dev
# NEXT_PUBLIC_API_BASE_URL=/api
# ENVIRONMENT=development
# DEBUG=true

# ===========================================================
# 認証設定
# ===========================================================
# アプリ認証
AUTH_SECRET=your_auth_secret_here
JWT_SECRET=your_jwt_secret_here

# Next Auth
NEXTAUTH_SECRET=your_nextauth_secret_here
# 本番環境 NEXTAUTH_URL=https://automationa-tools.pages.dev
# 開発環境 NEXTAUTH_URL=https://develop.automationa-tools.pages.dev

# ===========================================================
# Cloudflare アカウント設定
# ===========================================================
# アカウントID
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# APIトークン
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ===========================================================
# Cloudflare D1 データベース
# ===========================================================
# 本番環境
# D1_DATABASE_ID=your_production_database_id
# D1_DATABASE_NAME=automationa-tools-db
# D1_DATABASE_BINDING=DB

# 開発環境
# D1_DATABASE_ID=your_development_database_id
# D1_DATABASE_NAME=automationa-tools-dev-db
# D1_DATABASE_BINDING=DB

# ===========================================================
# Cloudflare KV ネームスペース
# ===========================================================
# セッションストア（本番環境）
# KV_SESSION_STORE_ID=your_production_session_store_id
# KV_SESSION_STORE_BINDING=SESSION_STORE_PROD

# セッションストア（開発環境）
# KV_SESSION_STORE_ID=your_development_session_store_id
# KV_SESSION_STORE_BINDING=SESSION_STORE_DEV

# キャッシュ（本番環境）
# KV_CACHE_ID=your_production_cache_id
# KV_CACHE_BINDING=CACHE_PROD

# キャッシュ（開発環境）
# KV_CACHE_ID=your_development_cache_id
# KV_CACHE_BINDING=CACHE_DEV

# 従来のKV（互換性維持用）
KV_NAMESPACE_ID=your_kv_namespace_id

# ===========================================================
# Cloudflare R2 バケット
# ===========================================================
# アセットストレージ（本番環境）
# R2_ASSETS_BUCKET_NAME=automationa-tools-storage
# R2_ASSETS_BINDING=ASSETS

# アセットストレージ（開発環境）
# R2_ASSETS_BUCKET_NAME=dev-automationa-tools-storage
# R2_ASSETS_BINDING=ASSETS

# バックアップストレージ（本番環境）
# R2_BACKUPS_BUCKET_NAME=automationa-tools-backup
# R2_BACKUPS_BINDING=BACKUPS

# バックアップストレージ（開発環境）
# R2_BACKUPS_BUCKET_NAME=dev-automationa-tools-backup
# R2_BACKUPS_BINDING=BACKUPS

# ===========================================================
# AI設定 - LLMプロバイダー別
# ===========================================================
# OpenAI設定
OPENAI_API_KEY=your_openai_api_key

# Anthropic設定
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google (Gemini) 設定
GOOGLE_API_KEY=your_google_api_key

# Mistral AI設定
MISTRAL_API_KEY=your_mistral_api_key

# Cohere設定
COHERE_API_KEY=your_cohere_api_key

# ===========================================================
# GitHub PR生成関連
# ===========================================================
GITHUB_TOKEN=your_github_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repository_name
# 本番環境 PR_BASE_BRANCH=main
# 開発環境 PR_BASE_BRANCH=develop
PR_DRAFT=false  # true/false